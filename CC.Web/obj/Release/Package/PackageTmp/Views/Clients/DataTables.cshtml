@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>DataTables</title>
    <script src="../../Scripts/DataTables-1.9.0/media/js/jquery.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.dataTables.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#example').dataTable({
                "bProcessing": true,
                "bLengthChange": false,
                "bServerSide": true,
                "sAjaxSource": "DatatablesData",
                "aoColumnDefs": [
                    { "sName": "Id", "aTargets": [0] },
                ]
            });
        });
    </script>
</head>
<body>
    <div>
        <h1>
            DataTables</h1>
        <table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
            <thead>
                <tr>
                    <th width="20%">
                        Id
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        data goes here
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>
