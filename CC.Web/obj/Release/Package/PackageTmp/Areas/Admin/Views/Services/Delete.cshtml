@model CC.Data.Service

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Service</legend>

    <div class="display-label">Name</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="display-label">ReportingMethod</div>
    <div class="display-field">
        @EnumHelper.EnumDisplayNameFor(Model.ReportingMethodEnum)
    </div>

    <div class="display-label">ServiceType</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ServiceType.Name)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
