@model CC.Data.FunctionalityLevel
           
@{
    object selVal=null;
    if(Model != null ) { selVal = Model.Id; }
    
    //DropDownListFor did not pick up the selected value from the model without this
    var fLevels = new SelectList((IEnumerable<SelectListItem>)ViewBag.FunctionalityLevels, "Value", "Text", selVal);
}
@Html.DropDownListFor(model => model.Id, fLevels)
