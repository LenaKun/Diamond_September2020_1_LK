@model IEnumerable<CC.Data.CfsAmount>
@{
    ViewBag.Title = "CFS Amounts";
}

@section Header
{
	@if (Model.Any())
	{
		<script type="text/javascript">
			$(document).ready(function () {
				$('table.grid').dataTable({
					"bJQueryUI": true,
					"sPaginationType": "full_numbers",
					"aaSorting": [[0, "asc"]], //cap name asc
					"aoColumnDefs": [
						{ "aTargets": [-1], "bSortable": false},//the column with links,

					]
				});
			});
		</script>
	}
}
<h2>@ViewBag.Title</h2>
@Html.Grid(Model).Columns(column =>
{

    column.For(f => f.Year).Named("Year");
    column.For(f => f.CurrencyId).Format("{0:F}").Named("CUR");
    column.For(f => string.Join(", ", f.CountryNames)).Named("Countries");
    column.For(f => Html.DisplayFor(a => f.Level)).Named("Level");
    column.For(f => Html.DisplayFor(a => f.Amount)).Named("Amount");
    column.For(f => Html.ActionLink("Details", "Details", new { id = f.Id }));
    if (User.IsInRole(CC.Data.FixedRoles.Admin.ToString()))
    {
        column.For(f => Html.ActionLink("Edit", "Edit", new { id = f.Id }));
        column.For(f => Html.ActionLink("Copy To Next Year", "Copy", new { id = f.Id }));
        column.For(f => Html.ActionLink("Delete", "Delete", new { id = f.Id }, new { onclick = "javascript: return confirm('CFS Amount will be deleted');" }));
    }
})
@if(User.IsInRole(CC.Data.FixedRoles.Admin.ToString()))
{
	<p>
		<a href="@Url.Action("Create")" class="button">Create new CFS Amount</a>
	</p>
}
<fieldset>
	<div class="editor-item">
		<button type="button" id="exportBtn">Export to Excel</button>
	</div>
</fieldset>
<script>
	$('#exportBtn').click(function () {
		window.location.href = '@Url.Action("Export")';
	});
</script>